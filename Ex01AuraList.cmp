<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    
    <aura:attribute name="fields" type="String[]" default="['Name', 'Company', 'Status']" />
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="mensagem" type="String" />

    <lightning:notificationsLibrary aura:id="notifLib"/>
    
    <div class='slds-box slds-theme_default'>
        <h1 class='slds-align_absolute-center slds-text-heading_large'>Criar um novo Lead: Aura</h1>
        <lightning:recordForm
                              objectApiName="Lead"
                              fields="{!v.fields}"
                              onsuccess="{!c.handleSuccess}" />
        
    <div class="slds-m-top_medium">
    <p><span style="color: green">{!v.mensagem}</span></p>
    </div>
        
    </div>
    
</aura:component>
